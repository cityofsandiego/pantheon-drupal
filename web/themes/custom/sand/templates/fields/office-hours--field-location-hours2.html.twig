<div class="office-hours office-hours-status--{% if is_open %}open{% else %}closed{% endif %}">
  {% if is_open %}
    <p class="l-margin-ts l-margin-bd"><span class="message message--success">Currently <strong>open</strong></span></p>
  {% else %}
    <p class="l-margin-ts l-margin-bd"><span class="message message--error">Currently <strong>closed</strong>
	</span>
</p>

  {% endif %}
  </p>

  {% for item in items %}
    <div class="office-hours__item grid-x">
      {% if item.label %}
        <div class="office-hours__item-label cell small-5">{{ item.label }}</div>
      {% endif %}
      {% if item.slots['#markup'] is not empty %}
        <div class="office-hours__item-slots cell small-7">{{ item.slots['#markup']|replace({'-':' - ','am':'a.m.', 'pm':'p.m.'}) }}</div>
      {% endif %}
      {% if item.comments['#markup'] is not empty %}
        <div class="office-hours__item-comments cell small-12"><p class="fine-print">{{ item.comments }}</p></div>
      {% endif %}
    </div>
  {% endfor %}
</div>
