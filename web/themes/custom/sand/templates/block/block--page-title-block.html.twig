{{ title_prefix }}
{% if department_title is defined %}
    <h1{{ title_attributes.addClass('page-title') }}>{{ department_title }}</h1>
{% elseif title %}
    <h1{{ title_attributes.addClass('page-title') }}>{{ title }}</h1>
{% endif %}
{{ title_suffix }}

{% if topmenu is defined %}
    <ul id="department-top-menu">
        {% for item in topmenu.items %}
            <li{% if item.is_active == true %} class="active"{% endif %}><a href="{{ item.url }}">{{ item.title }}</a></li>
        {% endfor %}
    </ul>
{% endif %}